{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "inlineSources": true,
    "target": "ES2022"
  },
  "files": ["src/main.ts", "src/polyfills.ts", "src/app/workspace-mgmt-remote.module.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "src/test.ts",
    "src/test-setup.ts",
    "src/app/test/**/*",
    "src/**/*.spec.ts",
    "src/**/*.stories.ts",
    "src/**/*.stories.js"
  ]
}
